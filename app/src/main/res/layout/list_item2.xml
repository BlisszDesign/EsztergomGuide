<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view"
    app:cardCornerRadius="@dimen/card_view"
    app:cardElevation="@dimen/card_view">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/padding"
        android:layout_height="@dimen/padding"
        android:src="@drawable/info"
        android:layout_margin="@dimen/card_view"/>

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        style="@style/text2"
        android:layout_marginBottom="@dimen/menu_margins"
        android:text="@string/basilica_info" />

</LinearLayout>
</android.support.v7.widget.CardView>